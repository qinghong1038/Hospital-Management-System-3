@model PatientsDoctorsMS.ViewModels.AppointmentsVM.AppointmentsListVM

@{
    ViewBag.Title = "Appointments";
}
<div>
    <h2 class="navbar navbar-default">Approved Events</h2>
</div>

<table class="table table-hover">
    <tr>       
        <th>
            Patient
        </th>
        <th>
            Appointment Date
        </th>
        <th>
            Status
        </th>
        <th>
            Options
        </th>
    </tr>

    @foreach (var item in Model.Items)
    {
        if (item.Status == AppointmentEnum.Approved) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Review", "Review", new { id = item.ID }, new { @class = "btn btn-success" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }

</table>

